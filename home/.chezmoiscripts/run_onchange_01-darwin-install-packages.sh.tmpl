{{ if eq .chezmoi.os "darwin" -}}
#!/bin/bash

# Install Homebrew packages
brew bundle --file=/dev/stdin <<EOF
{{ range .packages.darwin.taps -}}
tap {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.brews -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.casks -}}
cask {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.mas -}}
mas "", id: {{ . }}
{{ end -}}
EOF

# pnpm and yarn formulae conflict with node's bundled symlinks
brew link --overwrite pnpm 2>/dev/null || true
brew link --overwrite yarn 2>/dev/null || true
{{ end -}}
